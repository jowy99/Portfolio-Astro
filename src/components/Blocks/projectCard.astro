---
const { title, description, imageUrl, technologies = [], projectUrl } = Astro.props;
---

<div class="max-w-sm bg-white rounded-lg shadow-lg overflow-hidden transform transition hover:scale-105 dark:bg-gray-800">
  <img class="w-full h-48 object-cover" src={imageUrl} alt={`Imagen del proyecto ${title}`} />

  <div class="p-6">
    <h2 class="text-3xl font-bold mb-2 text-green-400">{title}</h2>
    <p class="prose text-gray-600 mb-4 dark:text-gray-400">{description}</p>

    {projectUrl && (
      <a href={projectUrl} target="_blank" class="inline-block bg-green-400 text-white px-4 py-2 rounded-md hover:bg-green-600 transition dark:bg-green-500">
        <p class="font-medium text-sm">
          Ver Proyecto
        </p>
      </a>
    )}
  </div>
</div>
