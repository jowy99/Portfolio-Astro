---
import Titlehr from "../Basics/titlehr.astro";
import H2 from "../Basics/h2.astro";
import H4 from "../Basics/h4.astro";
---

<article class="w-full min-h-screen space-y-12 p-4 lg:mt-24">
    <section class="flex-col space-y-8 h-1/4 w-full">
        <H2 children="Mis proyectos"></H2>
        <Titlehr/>
    </section>

    <section class="grid grid-cols-1 gap-12 lg:grid-cols-2">
        <div class="flex shadow-md">
            <a href="" class="group relative w-full h-full">
                <img src="../../src/img/developmentProjects.png" alt="Imagen proyectos de desarrollo" class="w-full h-full rounded-md object-fill opacity-75 group-hover:opacity-100" loading="lazy">
                <div class="w-max absolute inset-0">
                    <H4
                        porps="p-2 text-sm rounded-br-md rounded-tl-md shadow-md text-white bg-green-600 dark:bg-green-800 md:text-md md:p-4 xl:text-xl"
                        children="Mis proyectos"
                    />
                </div>
            </a>
        </div>
    </section>
</article>